<!DOCTYPE html>
<html>
  <%- include('partials/head', {title: title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1>ID: <%= bookinstance.id %></h1>
            <p>
                <strong>Title: </strong>
                <a href='<%=bookinstance.book.url %>'><%=bookinstance.book.title%></a>
            </p>
            <p>
                <strong>Imprint: </strong>
                <span><%=bookinstance.imprint%></span>
            </p>
            <p>
                <strong>Status: </strong>
            <% if(bookinstance.status === 'Available'){%>
                <span class='text-success'><%=bookinstance.status%></p>
            <%}
            else if(bookinstance.status === 'Maintenance'){%>
                <span class='text-danger'><%=bookinstance.status%></p>
            <%}
            else {%>
                <span class='text-warning'><%=bookinstance.status%></p>
            <%}%>
            </p>
            <%if(bookinstance.status !== 'Available'){%>
                <p>
                    <strong>Due back: </strong>
                    <span><%=bookinstance.due_back_formatted%></span>
                </p>
            <% }%>
            <hr>
              <p>
                <a href="<%=bookinstance.url%>/delete">Delete copy</a>
              </p>     
        </div>
      </div>
    </div>
  </body>
</html>