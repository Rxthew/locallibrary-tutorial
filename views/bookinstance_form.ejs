<!DOCTYPE html>
<html>
  <%- include('partials/head', {title: title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title%></h1>
            <form method="POST" action="">
                <div class='form-group'>
                    <label for="book">Book: </label>
                    <select id='book' class='form-control' type='select' placeholder='Select book' name='book' required="true">
                        <% book_list.sort(function(a,b){
                            let textA = a.title.toUpperCase();
                            let textB = b.title.toUpperCase();
                            return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;
                        });
                        for(book of book_list){%>
                                <option value='<%=book._id%>' <% if(!(typeof bookinstance === 'undefined') && selected_book === book._id.toString()){%> selected=true <%}%>><%=book.title%></option>
                            <%}%>
                            
                    </select>
                </div>
                <div class='form-group'>
                    <label for="imprint">Imprint: </label>
                    <input id='imprint' class='form-control' type='text' placeholder='Publisher and Date information' name='imprint' required="true" value= "<%=typeof bookinstance == 'undefined' ? '' : bookinstance.imprint %>">
                </div>
                <div class='form-group'>
                    <label for="due_back">Available from: </label>
                    <input id='due_back' class='form-control' type='date' placeholder='Publisher and Date information' name='due_back' required="true" value= "<%=typeof bookinstance == 'undefined' ? '' : bookinstance.due_back %>">
                </div>
                <div class='form-group'>
                    <label for="status">Status: </label>
                    <select id='status' class='form-control' type='select' placeholder='Select status' name='status' required="true">
                        <option value="Maintenance">Maintenance</option>
                        <option value="Available">Available</option>
                        <option value="Loaned">Loaned</option>
                        <option value="Reserved">Reserved</option>
                    </select>
                </div>
                
                <button class='btn btn-primary' type='submit'>Submit</button>
                <%if(!(typeof errors === 'undefined')){%>
                    <ul>
                        <%for(error of errors){%>
                            <li><%=error.msg%></li>
                        <%}%>
                    </ul>
                <%}%>

            </form>   
        </div>
      </div>
    </div>
  </body>
</html>