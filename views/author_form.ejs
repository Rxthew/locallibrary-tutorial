<!DOCTYPE html>
<html>
  <%- include('partials/head', {title: title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title%></h1>
            <form method="POST" action="">
                <div class='form-group'>
                    <label for="first_name">First Name: </label>
                    <input id='first_name' class='form-control' type='text' placeholder='John' name='first_name' required='true'  value= "<%=  typeof author == 'undefined' ? '' : author.first_name %>">
                    <label for="family_name">Family Name: </label>
                    <input id='family_name' class='form-control' type='text' placeholder='Jones' name='family_name' required='true' value= "<%=  typeof author == 'undefined' ? '' : author.family_name %>">
                </div>
                <div class='form-group'>
                    <label for="date_of_birth">Date of Birth: </label>
                    <input id='date_of_birth' class='form-control' type='date' placeholder='John' name='date_of_birth' value= "<%=  typeof author == 'undefined' ? '' : author.dob_iso %>">
                    <label for="date_of_death">Date of Death: </label>
                    <input id='date_of_death' class='form-control' type='date' placeholder='Jones' name='date_of_death' value= "<%=  typeof author == 'undefined' ? '' : author.dod_iso %>">
                </div>
                <button class='btn btn-primary' type='submit'>Submit</button>
                <%if(!(typeof errors === 'undefined')){%>
                    <ul>
                        <%for(error of errors){%>
                            <li><%=error.msg%></li>
                        <%}%>
                    </ul>
                <%}%>

            </form>   
        </div>
      </div>
    </div>
  </body>
</html>